{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ignoreRules": {
    "TS2304": true,
    "TS2345": true,
    "TS2453": true
  }
}
